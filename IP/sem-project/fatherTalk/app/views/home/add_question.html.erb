

<header>
    <%= render 'home/navbar' %>
</header>
<div class="container">
    <div class="row row-quest question_title">
		<span href="" id="new_questions_text"><%=t("headers.ask")%></a>
    </div>

    <div class="row">
        <div id="question-section" class="col">
            <% if @error_message %>
                <p id="question_form_err_message"><%= @error_message %></p>
            <% end %>
            <%= form_tag(ask_path, :method => "post") do %>
                <br/>
                <%= label_tag t("forms.question.labels.title"), nil, class: 'form_label_text' %>
                <%= text_field_tag :title, "", class: 'form-control' %>
                <br/>
                <%= label_tag t("forms.question.labels.text"), nil, class: 'form_label_text' %>
                <%= text_area :text, "", class: 'form-control' %>
                <br/>
                <%= submit_tag t("forms.question.labels.submit"), class: 'btn btn-outline-success my-2 my-sm-0'  %>
            <% end %> 
        </div>
    </div>
    

    <div id = "login_status_info">
        <p>
        	<% if current_user %>
        	  Logged in as <%= current_user.email %>
        	<% else %>
        	  You've not yet authenticated
        	<% end %>
        </p>
    </div>
    <li class="nav-item <%= "active" if I18n.locale == :ru %>">
        <%= link_to "РУС", { locale: :ru }, class: "" %>
    </li>
    <li class="nav-item <%= "active" if I18n.locale == :en %>">
        <%= link_to "ENG", { locale: :en }, class: "" %>
    </li>
</div>
